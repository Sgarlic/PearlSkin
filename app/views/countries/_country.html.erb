<li>
	<span class = "content">
		<%= form_for(country) do |f| %>
		  <div class="add_country_form">
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.text_field :country_name %>
			</div>
		  </div>
		  <%= f.submit "保存", class: "btn btn-primary"%>
		  <%= link_to "删除", country,  method: :delete,
									data: { confirm: "确定删除？"},
									title: country.country_name %>
		<% end %>
	</span>
</li>