<li>
	<span class = "content">
		<%= form_for(brand) do |f| %>
		<tr>
		  <div class="add_brand_form">
			<%= render 'shared/error_messages', object: f.object %>
				<td width="10">
					<%= f.text_field :brand_english %>
				</td>
				<td width="10">
					<%= f.text_field :brand_chinese %>
				</td>
				<td>
				<%= f.select :country_id, @countries %>
				</td>
			
		   </div>
		  		<td>
		  			<%= f.submit "保存", class: "btn btn-primary" %>
		  			<%= link_to "删除", brand,  method: :delete,
									data: { confirm: "确定删除？"},
									title: brand.brand_english %>
				</td>
		</tr>
		<% end %>
	</span>
</li>