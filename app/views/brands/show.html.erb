<% provide(:title, @brand.brand_name) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1><%= @brand.brand_name %></h1>
		</section>
	</aside>

	<div class="span8">
		<% @brand_items = Item.where("brand_id=#{@brand.id}").paginate(page: params[:page]).per_page(10) %>
		<ol class="microposts">
			<% @brand_items.each do |item| %>
				<%= render 'shared/single_item' , object: item %>
	  		<% end %>
		</ol>
		<%= will_paginate @brand_items%>
	</div>

</div>