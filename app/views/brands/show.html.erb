<% provide(:title, @brand.brand_name) %>

<div class="row">
	<aside class="span4">
		<section>
			<span class="item_brand">
				<%= @brand.brand_name %>
			</span>
			<h5>品牌所属：<%= Country.find(@brand.country_id).country_name %></h5>
		</section>
		<section>
			<% if @brand.brand_addrs.any? %>
				<span class="item_brand">品牌链接 (<%= @brand.brand_addrs.count %>)</span>
      			<ol class="microposts">
        			<%= render @brand_addrs %>
     			</ol>
      			<%= will_paginate @brand_addrs %>
    		<% end %>
		</section>
		<% if current_user.admin? %>
			<section>
				<%= render 'brand_addr_form' %>
			</section>
		<% end %>
	</aside>

	<div class="span8">
		<% @brand_items = Item.where("brand_id=#{@brand.id}").paginate(page: params[:page]).per_page(10) %>
		<ol class="microposts">
			<% @brand_items.each do |item| %>
				<%= render 'shared/single_item' , object: item %>
	  		<% end %>
		</ol>
		<%= will_paginate @brand_items%>
	</div>

</div>