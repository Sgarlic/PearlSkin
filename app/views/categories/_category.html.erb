<li>
	<span class = "content">
		<%= form_for(category) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="category_form">
				<tr>
					<td>
						<%= f.text_field :name %>
					</td>
					<td>
						<%= f.text_area :step, placeholder: "步骤..."  %>
					</td>
				</tr>
			</div>
			<%= f.submit "保存", class: "btn btn-primary" %>
			<%=	link_to '管理子类别', category_path(category.id) %>
			<%= link_to "删除", category,  method: :delete,
									data: { confirm: "确定删除？"},
									title: category.name %>
		<% end %>
	</span>
</li>